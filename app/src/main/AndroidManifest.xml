<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dev.jaym.noteit">

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.SplashActivity"
            android:exported="true"
            android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="dev.jaym.noteit.ui.EditNote"/>
        <activity android:name="dev.jaym.noteit.ui.OpenNote"/>
        <activity android:name="dev.jaym.noteit.ui.AddNote"/>
        <activity android:name="dev.jaym.noteit.ui.MainActivity"/>
    </application>

</manifest>